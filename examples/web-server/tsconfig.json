{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"declaration": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "lib"
	},
	"include": ["src/*.ts"]
}
